   journal = {Proceedings of the National Academy of Sciences of the United States of America},
   keywords = {Checkpoint blockade,Immunotherapy,Neoantigens,T-cell inflammation,Tumor microenvironment},
   month = {11},
   pages = {E7759-E7768},
   pmid = {27837020},
   publisher = {National Academy of Sciences},
   title = {Density of immunogenic antigens does not explain the presence or absence of the T-cell-inflamed tumor microenvironment in melanoma},
